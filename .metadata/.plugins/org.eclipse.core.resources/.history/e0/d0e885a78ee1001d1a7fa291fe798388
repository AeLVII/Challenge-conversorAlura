package Convertidor;

public class ConvertMoneda {
	private double valorIn;
	private double valorOut;
	
	
	public ConvertMoneda() {
		
	}
	public double conSolDolar(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=valorIn*0.27;
		return valorOut;	
	}
	public double conSolEuro(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=valorIn*0.24;
		return valorOut;	
	}
	public double conSolBolivianos(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=valorIn*1.84;
		return valorOut;	
	}
}
