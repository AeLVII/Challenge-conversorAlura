package Convertidor;

public class ConvertMoneda {
	private double valorIn;
	private double valorOut;
	
	public ConvertMoneda() {
		
	}
	public void setValorIn(double valorIn) {
		this.valorIn = valorIn;
	}
	public double getValorIn() {
		return valorIn;
	}
	public void setValorOut(double valorOut) {
		this.valorOut = valorOut;
	}
	public double getValorOut() {
		return valorOut;
	}
	
	public double conSolDolar(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=this.valorIn*0.27;
		return valorOut;	
	}
	public double conSolEuro(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=this.valorIn*0.24;
		return valorOut;	
	}
	public double conSolBoliviano(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=this.valorIn*1.84;
		return valorOut;	
	}
	public double conDolarSol(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=this.valorIn*3.76;
		return valorOut;	
	}
	public double conEuroSol(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=this.valorIn*4.17;
		return valorOut;	
	}
	public double conBolvianoSol(double valorIn) {
		this.valorIn=valorIn;
		this.valorOut=this.valorIn*0.55;
		return valorOut;	
	}
	
}
